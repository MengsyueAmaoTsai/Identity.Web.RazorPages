@{
    var disabledIdentityBannerPaths = new HashSet<string>
    {
        "/sign-in",
        "/sign-up",
    };

    var identityBannerVisible = !disabledIdentityBannerPaths.Contains(Context.Request.Path);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Richill Capital Identity</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RichillCapital.Identity.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="root">
        <div>
            <div class="direction-wrapper">
                <div style="position: absolute; height: 100%; width: 100%; top: 0px; right: 0px; left: 0px; bottom: 0px; overflow-x: auto; overflow-y: auto;">
                    <div class="background-container">
                        <div class="background-image"></div>
                    </div>

                    <div class="outer">
                        <div class="middle">
                            <div>
                                <div>
                                    <div>
                                        <div class="inner">
                                            <div class="lightbox-cover"></div>

                                            <div>
                                                <img class="form-logo" src="https://logincdn.msftauth.net/shared/5/images/microsoft_logo_ee5c8d9fb6248c938fd0.svg">
                                                
                                                @if (identityBannerVisible)
                                                {
                                                    @await Html.PartialAsync("_IdentityBanner");
                                                }

                                                <div class="page-content">
                                                    <div class="route-animation">
                                                        @RenderBody()
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @await Html.PartialAsync("_AnonymousFooter")
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
* {
    box-sizing: border-box;
}

body {
    font-weight: 400;
    font-family: "Segoe UI", -apple-system, "Helvetica Neue", "Lucida Grande", Roboto, Ebrima, "Nirmala UI", Gadugi, "Segoe Xbox Symbol", "Segoe UI Symbol", "Meiryo UI", "Khmer UI", Tunga, "Lao UI", Raavi, "Iskoola Pota", Latha, Leelawadee, "Microsoft YaHei UI", "Microsoft JhengHei UI", "Malgun Gothic", "Estrangelo Edessa", "Microsoft Himalaya", "Microsoft New Tai Lue", "Microsoft PhagsPa", "Microsoft Tai Le", "Microsoft Yi Baiti", "Mongolian Baiti", "MV Boli", "Myanmar Text", "Cambria Math";
    font-size: 0.9375rem;
    line-height: 1.25rem;
    margin: 0px;
    background-color: rgb(255, 255, 255);
}

button, input, select, textarea {
    font-weight: inherit;
    font-family: inherit;
    font-size: inherit;
    line-height: inherit;
    max-width: 100%;
    margin: 0px;
}

label {
    display: inline-block;
    max-width: 100%;
}

input[type="checkbox"] {
    width: 20px;
    height: 20px;
    box-sizing: border-box;
    padding: 0px;
}

a {
    color: rgb(0, 103, 104);
    text-decoration: none;
}

.root {
    min-height: 1px;
}

.direction-wrapper {
    min-height: 1px;
}

.background-container {
    height: 100%;
    width: 100%;
    top: 0px;
    left: 0px;
    z-index: -1;
    position: fixed;
    background-size: cover;
    background-repeat: no-repeat;
    background-position-x: 50%;
    background-position-y: 50%;
    background-color: rgb(242, 242, 242);    
}

.background-image {
    height: 100%;
    width: 100%;
    top: 0px;
    left: 0px;
    z-index: -1;
    position: fixed;
    background-size: cover;
    background-repeat: no-repeat;
    background-position-x: 50%;
    background-position-y: 50%;
    background-image: url(https://logincdn.msftauth.net/shared/5/images/2_bc3d32a696895f78c19d.svg);
}

.outer {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0px;
    right: 0px;
    left: 0px;
    bottom: 0px;
    display: table;
}

.middle {
    display: table-cell;
    vertical-align: middle;
}


.inner {
    margin-left: auto;
    margin-right: auto;
    position: relative;
    max-width: 440px;
    width: calc(100% - 40px);
    padding-top: 44px;
    padding-bottom: 44px;
    padding-left: 44px;
    padding-right: 44px;
    margin-bottom: 28px;
    background-color: rgb(255, 255, 255);
    box-shadow: rgba(0, 0, 0, 0.2) 0px 2px 6px;
    min-width: 320px;
    min-height: 338px;
    overflow-x: hidden;
    overflow-y: hidden;
    z-index: 1;
    animation-name: f11ta6k4;
    transition-timing-function: ease-in;
    animation-timing-function: cubic-bezier(0.5, 0, 0.5, 1);
    animation-duration: 0.3s;
}

.lightbox-cover {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0px;
    left: 0px;
    background-color: white;
    opacity: 0;
    z-index: -1;
    transition: 0.5s ease-in;
}

.form-logo {
    max-width: 256px;
    height: 24px;
}

.page-content {
    position: relative;
    min-height: 206px;
}

.route-animation {
    position: relative;
    animation-duration: 0.25s;
    animation-timing-function: cubic-bezier(0.5, 0, 0.5, 1);
    animation-fill-mode: both;
    transition-property: left;
    animation-name: fr2e2iv;
    min-height: inherit;
}

.form-header {
    margin-top: 16px;
    margin-bottom: 12px;
    font-weight: 600;
    line-height: 28px;
    color: rgb(27, 27, 27);
    font-size: 1.5rem;
    padding-top: 0px;
    padding-bottom: 0px;    
    padding-left: 0px;
    padding-right: 0px;
}

.form-body {
    min-height: 1px;
    margin-left: 0px;
    margin-right: 0px;
}

.form-input-control {
    min-height: 1px; 
    margin-left: 0px; 
    margin-right: 0px;
}

.form-validation-error {
    color: rgb(232, 17, 35);
    margin-top: 0px;
    margin-left: 0px;
    margin-bottom: 0px;
    margin-right: 0px;
}

.form-input-container {
    width: 100%;
    margin-bottom: 16px;
    display: block;
    background-image: none;
}

.form-input {
    height: 36px;
    width: 100%;
    outline-style: none;
    background-color: transparent;
    border-top-style: solid;
    border-right-style: solid;
    border-bottom-style: solid;
    border-left-style: solid;
    border-bottom-right-radius: 0px;
    border-bottom-left-radius: 0px;
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
    border-top-width: 0px;
    border-right-width: 0px;
    border-bottom-width: 1px;
    border-left-width: 0px;
    border-top-color: rgb(102, 102, 102);
    border-right-color: rgb(102, 102, 102);
    border-bottom-color: rgb(102, 102, 102);
    border-left-color: rgb(102, 102, 102);
    padding-top: 6px;
    padding-right: 10px;
    padding-bottom: 6px;
    padding-left: 0px;
}

.form-footer { 
}

.form-footer-row {
    position: absolute;
    width: 100%;
    bottom: 0;
    text-align: right;
}

.next-button {
    vertical-align: middle;
    position: relative;
    overflow-x: hidden;
    overflow-y: hidden;
    text-align: center;
    display: inline-block;
    max-width: 100%;
    white-space: nowrap;
    border-top-style: none;
    border-right-style: none;
    border-bottom-style: none;  
    border-left-style: none;
    min-height: 32px;
    min-width: 108px;
    line-height: normal;
    padding-top: 4px;
    padding-right: 12px;
    padding-left: 12px;
    padding-bottom: 4px;
    text-overflow: ellipsis;
    touch-action: manipulation;
    background-color: rgb(0, 103, 184);
    border-top-color: rgb(0, 103, 184);
    border-right-color: rgb(0, 103, 184);
    border-bottom-color: rgb(0, 103, 184);
    border-left-color: rgb(0, 103, 184);
    color: rgb(255, 255, 255);
}
</style>