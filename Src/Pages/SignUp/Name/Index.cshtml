@page "/sign-up/name"
@model SignUpNameViewModel
@{
    ViewData["Title"] = "What's your name?";
    Layout = "_AnonymousLayout";
}

<form method="post">
    <div class="form-header">
        <div>
            <div role="heading">@ViewData["Title"]</div>
        </div>
    </div>

    <span asp-validation-for="Name"></span>
    
    <input asp-for="Name" type="text">
    
    <button type="submit">Next</button>
</form>


@section Scripts {
    <partial name="_ClientValidation" />
}